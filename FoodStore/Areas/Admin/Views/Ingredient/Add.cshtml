@model FoodStore.Models.Ingredients

<form asp-action="Add">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- Display all validation errors -->

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FoodId" class="control-label"></label>
        <select asp-for="FoodId" class="form-control" asp-items="@(new SelectList(ViewBag.FoodList, "Id", "Name"))">
            <option value="">Chọn món ăn</option>
        </select>
        <span asp-validation-for="FoodId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Unit" class="control-label"></label>
        <input asp-for="Unit" class="form-control" />
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Thêm nguyên liệu</button>
</form>
