@model FoodStore.Models.Table

@{
    ViewData["Title"] = "Display";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Chi tiết bàn @Model.Id</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            {
                <text>Đã có khách</text>
            }
            else
            {
                <text>Trống</text>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.Id" class="btn btn-primary">Chỉnh sửa</a> |
    <a asp-action="Index" class="btn btn-info">Trở về</a>
</div>
